<h2>Edit post</h2>

<form action="/posts/{{postResult.id}}/edit" method="POST" enctype="multipart/form-data">

  <div>
    <label for="title">Title:</label>
    <input type="text" name="title" value="{{postResult.title}}">
    <br>
    <img src="{{postResult.imageUrl}}" alt="" width="200">
    <label for="">Upload new image</label>
    <input type="file" name="imageUrl" id="">
    <br>
    <label for="description">Description:</label>
    <textarea name="description"  value="{{description}}">{{postResult.description}}</textarea>
  </div>


  <div>
    <button>Edit post</button>
  </div>

</form>