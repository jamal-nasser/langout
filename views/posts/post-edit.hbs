<div class="container-fluid">
  <div class="row">
    <div class="col-lg-6 col-md-6 d-none d-md-block image-container"></div>

    <div class="col-lg-6 col-md-6 form-container">
      <div class="col-lg-8 col-md-12 col-sm-9 col-xs-12 form-box text-center">
        <img src="{{postResult.imageUrl}}" alt="" class="profile-picture">
        <div class="heading mb-4">
          <h4>Edit my post</h4>
        </div>
        <form action="/posts/{{postResult.id}}/edit" method="POST" enctype="multipart/form-data">
          <div class="form-input">
            <span><i class="fa fa-comment"></i></span>
            <input type="text" name="title" value="{{postResult.title}}">
          </div>
          <div class="form-input">
            <span><i class="fa fa-image"></i></span>
            <input type="file" name="imageUrl">
            <input type="text" name="existingImage" value="{{postResult.imageUrl}}" hidden>
          </div>
          <div class="form-input">
            <span><i class="fa fa-commenting"></i></span>
          <textarea name="description" value="{{description}}" cols="40" rows="10">{{postResult.description}}</textarea>
          </div>
          <div class="text-left mb-3">
            <button type="submit" class="btn btn-social btn-google">Edit post</button>
          </div>
        </form>
      </div>
    </div>
  </div>
</div>

