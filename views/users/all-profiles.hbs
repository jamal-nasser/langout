<section class="all-profiles-page">
  <h1>All Profiles</h1>
  <form  action="/search" method="POST">
    <input type="text" placeholder="Filter.." name="search">
    <button type="submit" ><i class="fa fa-search"></i></button>
  </form>
  <div class="container">
    <div class="row">
      {{#each users}}

      <div class="all-profiles" class="col-4" >
        <img  alt="Responsive image" class="profile-picture" src="{{imageUrl}}" alt="{{fullName}} - image">

        <div class="card-info">
          <h3>{{fullName}}</h3>
          <p>I can teach {{speakingLanguage}} and I want to learn {{learningLanguage}} </p>
          <a href="/contact/{{id}}">Let's connect</a>
        </div>
      </div>
      {{/each}}
    </div>
  </div>

</section>





